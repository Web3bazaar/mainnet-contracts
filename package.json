{
  "name": "web3bazaar-mainnet-contract",
  "version": "1.0.0",
  "description": "web3bazaar contract project",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "compile": "truffle compile",
    "test": "truffle test --network development",
    "coverage": "truffle run coverage",
    "deployMumbai": "truffle migrate --network mumbai",
    "deployMatic": "truffle migrate --network matic --verbose-rpc --interactive --skip-dry-run --reset",
    "verifyMumbai" : "truffle run verify Web3BazaarEscrow --network mumbai",
    "resetDeploy"  : "truffle deploy --reset --network mumbai",
    "deployRaffle"  : "truffle migrate -f 3 --to 3 --network mumbai"
  },
  "author": "drbrown",
  "license": "ISC",
  "devDependencies": {
    "@codechecks/client": "^0.1.12",
    "@openzeppelin/contracts": "^4.7.1",
    "@openzeppelin/test-helpers": "^0.5.15",
    "coveralls": "^3.1.1",
    "eth-gas-reporter": "^0.2.24",
    "ganache-cli": "6.12.2",
    "solidity-coverage": "0.7.18",
    "truffle-plugin-verify": "^0.5.26"
  },
  "dependencies": {
    "@truffle/hdwallet-provider": "^2.0.12",
    "dotenv": "^16.0.1",
    "ganache-cli": "6.12.2",
    "truffle": "^5.4.29",
    "truffle-assertions": "^0.9.2",
    "web3": "^1.7.4"
  }
}
